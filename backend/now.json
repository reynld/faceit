{
    "name": "faceit",
    "alias": "faceit.now.sh",
    "version": 2,
    "builds": [
      { "src": "src/api/**/*.ts", "use": "@now/node" }
    ],
    "routes": [
      { "src": "/authorize", "dest": "/src/api/faceit/authorize.ts" },
      { "src": "/callback", "dest": "/src/api/faceit/callback.ts" },
      { "src": "/faceit", "dest": "/src/api/webhook-handler.ts" }
    ],
    "env": {
      "HOOK_URL": "https://localhost:9001",
      "FACEIT_URL": "https://api.faceit.com/auth/v1/api",
      "FACEIT_API_KEY": "@faceit-api-key",
      "FACEIT_CLIENT_ID": "@faceit-client-id"
    }
}